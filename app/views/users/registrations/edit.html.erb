<h2>プロフィール編集</h2>
</br>
<div class="ui form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="two fields">
      <div class="field">
        <%= f.label :姓 %>
        <%= f.text_field :familyName %>
      </div>
      <div class="field">
        <%= f.label :名 %>
        <%= f.text_field :lastName %>
      </div>
    </div>
    
    <div class="two fields">
      <div class="field">
        <%= f.label :セイ %>
        <%= f.text_field :familyNameDetail %>
      </div>
      <div class="field">
        <%= f.label :メイ %>
        <%= f.text_field :lastNameDetail %>
      </div>
    </div>
  
    <div class="two fields">
      <div class="field">
        <%= f.label :性別 %>
        <%= f.select :gender, User.genders.keys, {} %>
      </div>
      <div class="field">
        <%= f.label :居住地 %>
        <%= f.select :prefecture, User.prefectures.keys, {} %>
      </div>
    </div>
  
    <div class="three field">
      <%= f.label :生年月日 %>
      <%= f.date_select(:birthdate, start_year: 1970, end_year: Date.today.year) %>
    </div>
  

    
    <div class="field">
      <label>学歴1</label><%= f.label :年 %>
      <input type="text" name="last-name" placeholder="Last Name">
    </div>
    
    <div class="field">
      <label>学歴2</label><%= f.label :高校卒業 %>
      <input type="text" name="last-name" placeholder="Last Name">
    </div>
    
    <div class="field">
      <label>学歴3</label><%= f.label :年 %>
      <input type="text" name="last-name" placeholder="Last Name">
    </div>
    
    <div class="field">
      <label>職歴1</label><%= f.label :卒業 %>
      <input type="text" name="last-name" placeholder="Last Name">
    </div>
    
    <div class="field">
      <label>職歴2</label><%= f.label :年 %>
      <input type="text" name="last-name" placeholder="Last Name">
    </div>
    
    <div class="field">
      <label>職歴3</label><%= f.label :卒業 %>
      <input type="text" name="last-name" placeholder="Last Name">
    </div>
    
    <div class="field">
      <%= f.label :資格 %>
      <%= f.text_field :certification %>
    </div>
    
    <div class="field">
      <%= f.label :エンジニア志望理由 %>
      <%= f.text_field :reason %>
    </div>
    
    <div class="field">
      <%= f.label :学習期間 %>
      <input type="text" name="first-name" placeholder="First Name">
    </div>
    
    <div class="two fields">
      <div class="field">
        <%= f.label :長所 %>
        <%= f.text_field :strongPoint %>
      </div>
      <div class="field">
        <%= f.label :短所 %>
        <%= f.text_field :weakPoint %>
      </div>
    </div>

    <div class="field">
      <%= f.label :エンジニアとしての目標 %>
      <%= f.text_field :goal %>
    </div>
  
    <div class="field">
      <%= f.label :学習に使用しているサイト・書籍など %>
      <%= f.text_field :learningResource %>
    </div>
    <div class="field">
      <%= f.label :情報収集に使用しているサイト・書籍など %>
      <%= f.text_field :informationResource %>
    </div>
    
    <div class="two fields">
      <div class="field">
        <%= f.label :学習した言語 %>
        <%= f.select :language, User.languages.keys, {} %>
      </div>
      <div class="field">
        <%= f.label :学習したフレームワーク %>
        <%= f.select :framework, User.frameworks.keys, {} %>
      </div>
    </div>
    
    <div class="field">
      <%= f.label :ポートフォリオ %>
      <%= f.text_field :portfolio %>
    </div>
    
    <div class="field">
      <%= f.label :作ってみたいプロダクト %>
      <%= f.text_field :product %>
    </div>
    
    <div class="field">
      <%= f.label :自己紹介 %>
      <%= f.text_area :introduction %>
    </div>
    
    <div class="two fields">
    <div class="field">
      <%= f.label :希望勤務地 %>
      <input type="text" name="last-name" placeholder="Last Name">
    </div>
    
    <div class="field">
      <%= f.label :希望給与 %>
      <input type="text" name="first-name" placeholder="First Name">
    </div>
    </div>
    
    <div class="field">
      <%= f.label :勤務開始可能日 %>
      <input type="text" name="last-name" placeholder="Last Name">
    </div>
    
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field">
      <%= f.label :新しいパスワード %> <i>(変更の必要がなければ空白のままで問題ございません)</i>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :新しいパスワード確認 %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label :現在のパスワード %> <i>(変更を確定するために現在のパスワードを入力してください)</i>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "更新を保存", class:"ui blue button right floated" %>
    </div>
  <% end %>
</div>

<h3>アカウントの削除</h3>

<%= link_to "アカウントの削除", registration_path(resource_name), data: { confirm: "削除してよろしいですか？" }, method: :delete, class:"ui blue basic button" %>
<%= link_to "戻る", :back, class:"ui blue basic button" %>
